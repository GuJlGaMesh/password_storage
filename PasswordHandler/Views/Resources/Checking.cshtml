@model PasswordHandler.Models.Store

@{
    ViewData["Title"] = "Create";
}
    <style>
        li {
            list-style-type: none; /* Убираем маркеры */
        }

        ul {
            padding-left: 0; /* Сдвигаем список влево */
        }

        div.hide {
            visibility: hidden;
        }
    </style>


<h1>Choose checking options</h1>

<hr />
<div class="row">
    <div class="col-md-auto">
        <form asp-action="Checking" method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckingPassword" class="control-label"></label>
                <input asp-for="CheckingPassword" class="form-control" type="checkbox" checked />
                <span asp-validation-for="CheckingPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ul>
                    @for (var i = 0; i < Model.Rules.Count; i++)
                    {
                        var rule = Model.Rules[i];
                        <li>
                            <label>@rule.Name</label>
                            <input asp-for="Rules[i].Name" type="hidden" value="@rule.Name" />
                            <input asp-for="Rules[i].Enabled" type="checkbox" class="form-control" />
                        </li>
                    }
                </ul>
            </div>
            <div class="form-group">
                <input type="submit" value="Accept" class="btn btn-primary" />
            </div>
            <div class="hide">
                <div class="form-group">
                    <label asp-for="Resource" class="control-label"></label>
                    <input required asp-for="Resource" class="form-control" />
                    <span asp-validation-for="Resource" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <p>Make password automatically: <input asp-for="Generation" type="checkbox" /></p>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input required asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Synopsis" class="control-label"></label>
                    <input asp-for="Synopsis" class="form-control" />
                    <span asp-validation-for="Synopsis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MasterKey" class="control-label"></label>
                    <input required asp-for="MasterKey" class="form-control" />
                    <span asp-validation-for="MasterKey" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
